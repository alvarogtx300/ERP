<Window x:Class="Clientes.Views.Principal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clientes - Vehiculos" Height="768" Width="1024"
        MinHeight="768" MinWidth="1024" Margin="0" Padding="0">
    <Window.Resources>
        <Style x:Key="myListboxStyle">
            <Style.Resources>
                <!-- Background of selected item when focussed -->
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#FFFFFF" />
                <!-- Background of selected item when not focussed -->
                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#FFFFFF" />
            </Style.Resources>
        </Style>
    </Window.Resources>

    <DockPanel>
        <ListBox x:Name="master"  Style="{StaticResource myListboxStyle}" Padding="-1" IsSynchronizedWithCurrentItem="True" Width="250" DockPanel.Dock="Left" DataContext="{Binding Clientes}" ItemsSource="{Binding}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Hidden" Background="#FFF4F4F4" HorizontalContentAlignment="Stretch" BorderBrush="{x:Null}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#FFE0E0E0" BorderThickness="0,0,0,1" >
                        <Grid Margin="5,10,0,10">
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                        
                            <TextBlock Foreground="Black" Grid.Row="0" Text="{Binding Nombre}"></TextBlock>
                            <TextBlock Foreground="Black" Grid.Row="1" Text="{Binding Apellidos}"></TextBlock>
                            <TextBlock Foreground="Black" Grid.Row="2" Text="{Binding Dni}"></TextBlock>
                            <TextBlock Foreground="Black" Grid.Row="3" Text="{Binding Direccion}"></TextBlock>
                            <TextBlock Foreground="Black" Grid.Row="4" Text="{Binding Telefono}"></TextBlock>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Grid>
            
        </Grid>
    </DockPanel>
</Window>
