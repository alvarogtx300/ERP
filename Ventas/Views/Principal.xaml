<Window x:Class="Ventas.Views.Principal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=" Ventas" Height="480" Width="800"
        MinHeight="480" MinWidth="800" Margin="0" Padding="0">
    
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Archivo">

            </MenuItem>
            <MenuItem Header="Agregar" Command="{Binding Agregar}" />
            <MenuItem Header="Modificar" IsEnabled="{Binding IsSelected}" Command="{Binding Modificar}" />
            <MenuItem Header="Eliminar" IsEnabled="{Binding IsSelected}" Command="{Binding Eliminar}" />
        </Menu>
        <TabControl SelectedIndex="{Binding IndexTab}" BorderBrush="{x:Null}" Background="White" Resources="{StaticResource TabItemBorder}" Template="{StaticResource TabControlTemplate}" Padding="4,0,4,2" Grid.IsSharedSizeScope="True" Margin="0">    
            <TabItem>
                <TabItem.Header>
                    <TextBlock Style="{StaticResource TabItemText}" Text="General" VerticalAlignment="Center" />
                </TabItem.Header>
                <TabItem.Content>
                    <ListBox x:Name="listaClientes" SelectedItem="{Binding ObjetoSeleccionado}" Background="{x:Null}" ItemsSource="{Binding Clientes}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" BorderBrush="{x:Null}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel HorizontalAlignment="Center" IsItemsHost="True" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource Tarjeta}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Nombre"/>
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Apellidos"/>
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Direccion"/>
                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Telefono"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Nombre}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Model.Apellidos}"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Model.Direccion}"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Telefono}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Style="{StaticResource TabItemText}" Text="Agregar" Margin="0,0,0,0" VerticalAlignment="Center" />
                </TabItem.Header>
                <TabItem.Content>
                    <Grid Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="1">
                            <Border VerticalAlignment="Top" Padding="10" Height="50" Width="auto">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Cliente" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0"/>
                                    <ComboBox Grid.Column="1" Grid.Row="0" Width="180" VerticalAlignment="Center" ItemsSource="{Binding Clientes}" DisplayMemberPath="Datos"></ComboBox>
                                </StackPanel>
                            </Border>
                            <Border VerticalAlignment="Top" Padding="10" Height="50" Width="auto">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Repuestos" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0"/>
                                    <ComboBox Grid.Column="1" Grid.Row="0" Width="180" VerticalAlignment="Center" ItemsSource="{Binding Repuestos}" SelectedIndex="{Binding IndexCombo}" DisplayMemberPath="Nombre"></ComboBox>
                                    <TextBox Width="50" Margin="10,0,10,0" VerticalAlignment="Center" Text="{Binding CantidadRepuesto}" />
                                    <Button Content="Agregar" VerticalAlignment="Center" Command="{Binding Agregar}" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        <DataGrid Grid.Column="0" ItemsSource="{Binding Venta.DetallesVentas}" Grid.Row="1" Grid.ColumnSpan="3" Margin="20,10,20,20">
                            
                        </DataGrid>
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Style="{StaticResource TabItemText}" Text="Estadisticas" Margin="0,0,0,0" VerticalAlignment="Center" />
                </TabItem.Header>
                <TabItem.Content>
                    <ListBox Background="{x:Null}" SelectedItem="{Binding ObjetoSeleccionado}" ItemsSource="{Binding Vehiculos}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" BorderBrush="{x:Null}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel HorizontalAlignment="Center" IsItemsHost="True" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource Tarjeta}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Modelo"/>
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Matricula"/>
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Dueño"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Modelo}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Matricula}"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DatosDuenio}" />

                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
